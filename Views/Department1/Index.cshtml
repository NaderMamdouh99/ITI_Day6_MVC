@using System.Collections;
@model IEnumerable<Day_7.Models.Department> 


@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@{
    Layout = "_Layout";
    ViewBag.Tittle = "Index";
}
<h1>All Department</h1>
<div class = "container">
    <a class="btn btn-outline-primary" asp-action="Create" asp-controller="Department1">Add Department </a>
    <table class="table">
        <tr>
            <th>DeptId</th>
            <th>DeptName</th>
            <th>DeptDesc</th>
            <th>DeptLocation</th>
            <th>DeptManager</th>
            <th>Hiredate</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>

        @{
            foreach(var item in Model)
            {
                <tr>
                <td>@item.DeptId</td>
                <td>@item.DeptName</td>
                <td>@item.DeptDesc</td>
                <td>@item.DeptLocation</td>
                <td>@item.DeptManager</td>
                <td>@item.Hiredate</td>
                    <td><a class="btn btn-outline-success" asp-action="Update" asp-controller="Department1" asp-route-id="@item.DeptId">Update</a></td>
                    <td><a class="btn btn-outline-danger" asp-action="Delete" asp-controller="Department1" asp-route-id="@item.DeptId">Delete</a></td>
                </tr>
            }
        }

    </table>

</div>